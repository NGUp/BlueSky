<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginHandler</servlet-name>
        <servlet-class>App.LoginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterHandler</servlet-name>
        <servlet-class>App.RegisterHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutHandler</servlet-name>
        <servlet-class>App.LogoutHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InfoHandler</servlet-name>
        <servlet-class>App.InfoHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordHandler</servlet-name>
        <servlet-class>App.PasswordHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminLoginHandler</servlet-name>
        <servlet-class>Admin.LoginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminPasswordHandler</servlet-name>
        <servlet-class>Admin.PasswordHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminLogoutHandler</servlet-name>
        <servlet-class>Admin.LogoutHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateEmployeeHandler</servlet-name>
        <servlet-class>Admin.CreateEmployeeHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveCustomerHandler</servlet-name>
        <servlet-class>Admin.RemoveCustomerHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisabledCustomerHandler</servlet-name>
        <servlet-class>Admin.DisabledCustomerHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnabledCustomerHandler</servlet-name>
        <servlet-class>Admin.EnabledCustomerHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/app/loginhandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterHandler</servlet-name>
        <url-pattern>/app/registerhandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutHandler</servlet-name>
        <url-pattern>/app/logouthandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfoHandler</servlet-name>
        <url-pattern>/app/infohandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordHandler</servlet-name>
        <url-pattern>/app/passwordhandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLoginHandler</servlet-name>
        <url-pattern>/admin/loginhandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPasswordHandler</servlet-name>
        <url-pattern>/admin/passwordhandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLogoutHandler</servlet-name>
        <url-pattern>/admin/logouthandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateEmployeeHandler</servlet-name>
        <url-pattern>/admin/employee/createhandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveCustomerHandler</servlet-name>
        <url-pattern>/admin/customer/removehandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisabledCustomerHandler</servlet-name>
        <url-pattern>/admin/customer/disablehandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnabledCustomerHandler</servlet-name>
        <url-pattern>/admin/customer/enablehandler</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
